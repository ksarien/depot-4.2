<% if line_item == @current_item %>
  <tr id="current_item" class="li-<%= line_item.id %>">
<% else %>
  <tr class="li-<%= line_item.id %>">
<% end %>
    <td><%= button_to '&ndash;'.html_safe,
              decrement_quantity_line_item_path(line_item),
              confirm: 'Are you sure?',
              remote: true %>
    </td>
    <td class="quantity"><%= line_item.quantity %>&times;</td>
    <td><%= line_item.product.title %></td>
    <td class="item_price"><%= number_to_currency(line_item.total_price) %></td>
    <td><%= link_to "&#215;".html_safe,
              line_item,
              method: :delete,
              confirm: "Are you sure?",
              remote: true,
              class: 'delete' %>
    </td>
  </tr>
